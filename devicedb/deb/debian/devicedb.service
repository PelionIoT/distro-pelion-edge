[Unit]
Description=DeviceDB: Remote database manager for Maestro
PartOf=pelion.service
After=pelion.service
# maestro generates the devicedb config file from a template
After=maestro.service
# edge-proxy provides connectivity to Pelion
After=edge-proxy.service

[Service]
Restart=always
RestartSec=5s
Environment="LD_LIBRARY_PATH=/usr/lib/pelion"
ExecStart=/usr/bin/devicedb start -conf /etc/pelion/devicedb.yaml
Type=simple

[Install]
WantedBy=pelion.service
